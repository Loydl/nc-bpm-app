# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[src/**.ts]
charset = utf-8
indent_style = tab
quote_type = single

[lib/**.php]
charset = utf-8
indent_style = tab
quote_type = single

[tests/**.php]
charset = utf-8
indent_style = tab
quote_type = single
